<%= form_for(@location) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.collection_select :person_id, Person.all, :id, :first_name, {include_blank:false}, {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-info' %>
  </div>
<% end %>
