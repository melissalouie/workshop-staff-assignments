<%= form_for [@person, @assignment] do |f| %>
  <div class="form-group">
    <%= f.label :role %>
    <%= f.text_field :role, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :person %>
    <%= f.collection_select :person_id, Person.all, :id, :first_name, {include_blank: false}, {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :location %>
    <%= f.collection_select :location_id, Location.all, :id, :name, {include_blank: false}, {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-info' %>
  </div>
<% end %>
